{
	"compilerOptions": {
		"target": "es2015",
		"sourceMap": true,
		"removeComments": false,
		"alwaysStrict": true,
		"downlevelIteration": true,
		"experimentalDecorators": true,
		"noImplicitAny": false, // todo: set to true (failure in three.interactive)
		"noImplicitThis": true,
		"noImplicitReturns": true,
		"pretty": true,

		"typeRoots": [
			"node_modules/@types",
			"src/@types"
		]
	}
}

